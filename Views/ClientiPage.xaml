                                   FontSize="12"
                                   TextColor="#3498DB" />

                            <Label Grid.Row="2"
                                   Grid.Column="1"
                                   Text="{Binding DataInregistrare, StringFormat='{0:dd.MM.yyyy}'}"
                                   FontSize="11"
                                   TextColor="#95A5A6"
