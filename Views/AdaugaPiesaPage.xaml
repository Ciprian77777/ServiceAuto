<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServiceAuto.Views.AdaugaPiesaPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <VerticalStackLayout Spacing="5">
                <Label Text="Denumire piesă *"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#2C3E50" />
                <Entry x:Name="DenumireEntry"
                       Placeholder="ex: Filtru de polen"
                       Text="{Binding Piesa.Denumire}" />
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Cod piesă"
                           FontSize="14"
                           TextColor="#2C3E50" />
                    <Entry x:Name="CodEntry"
                           Placeholder="ex: FP-001"
                           Text="{Binding Piesa.Cod}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="Producător"
                           FontSize="14"
                           TextColor="#2C3E50" />
                    <Entry x:Name="ProducatorEntry"
                           Placeholder="ex: MANN"
                           Text="{Binding Piesa.Producator}" />
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Preț (RON) *"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2C3E50" />
                    <Entry x:Name="PretEntry"
                           Placeholder="0.00"
                           Keyboard="Numeric"
                           Text="{Binding Piesa.Pret}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="Stoc *"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2C3E50" />
                    <Entry x:Name="StocEntry"
                           Placeholder="0"
                           Keyboard="Numeric"
                           Text="{Binding Piesa.Stoc}" />
                </VerticalStackLayout>
            </Grid>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Stoc minim"
                           FontSize="14"
                           TextColor="#2C3E50" />
                    <Entry x:Name="StocMinimEntry"
                           Placeholder="5"
                           Keyboard="Numeric"
                           Text="{Binding Piesa.StocMinim}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="Categorie"
                           FontSize="14"
                           TextColor="#2C3E50" />
                    <Picker x:Name="CategoriePicker"
                            ItemsSource="{Binding Categorii}"
                            SelectedItem="{Binding Piesa.Categorie}" />
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout Spacing="5">
                <Label Text="Descriere"
                       FontSize="14"
                       TextColor="#2C3E50" />
                <Editor x:Name="DescriereEditor"
                        HeightRequest="100"
                        AutoSize="TextChanges"
                        Text="{Binding Piesa.Descriere}" />
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Anulează"
                        BackgroundColor="#95A5A6"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnCancelClicked" />

                <Button Grid.Column="1"
                        Text="{Binding SaveButtonText}"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnSaveClicked" />
            </Grid>

            <Label x:Name="ErrorMessage"
                   Text=""
                   TextColor="Red"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>