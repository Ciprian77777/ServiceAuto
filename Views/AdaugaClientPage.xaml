<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ServiceAuto.Views.AdaugaClientPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <VerticalStackLayout Spacing="5">
                <Label Text="Nume complet *"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#2C3E50" />
                <Entry x:Name="NumeEntry"
                       Placeholder="ex: Popescu Ion"
                       Text="{Binding Client.Nume}" />
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <VerticalStackLayout Grid.Column="0" Spacing="5">
                    <Label Text="Email"
                           FontSize="14"
                           TextColor="#2C3E50" />
                    <Entry x:Name="EmailEntry"
                           Placeholder="ex: ion.popescu@gmail.com"
                           Keyboard="Email"
                           Text="{Binding Client.Email}" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Spacing="5">
                    <Label Text="Telefon *"
                           FontSize="14"
                           FontAttributes="Bold"
                           TextColor="#2C3E50" />
                    <Entry x:Name="TelefonEntry"
                           Placeholder="ex: 0722123456"
                           Keyboard="Telephone"
                           Text="{Binding Client.Telefon}" />
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout Spacing="5">
                <Label Text="Adresă"
                       FontSize="14"
                       TextColor="#2C3E50" />
                <Editor x:Name="AdresaEditor"
                        HeightRequest="80"
                        AutoSize="TextChanges"
                        Text="{Binding Client.Adresa}" />
            </VerticalStackLayout>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Text="Anulează"
                        BackgroundColor="#95A5A6"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnCancelClicked" />

                <Button Grid.Column="1"
                        Text="{Binding SaveButtonText}"
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"
                        Clicked="OnSaveClicked" />
            </Grid>

            <Label x:Name="ErrorMessage"
                   Text=""
                   TextColor="Red"
                   IsVisible="False"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>